<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/localTabLayout"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="20dp"
    android:orientation="vertical" >

    <TableLayout
        android:id="@+id/configTableLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:stretchColumns="*" >

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" >

            <TextView
                android:id="@+id/textView1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textAppearance="?android:attr/textAppearanceSmall" />

            <TextView
                android:id="@+id/ipCodeLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="IP code is: "
                android:textAppearance="?android:attr/textAppearanceMedium" />

        </LinearLayout>

        <TableRow
            android:id="@+id/tableHeadingRow"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp" >

            <TextView
                android:id="@+id/playerNameHeadingText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical|left"
                android:text="Player Name"
                android:textStyle="bold|italic" />

            <TextView
                android:id="@+id/playerTypeHeadingText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical|left"
                android:text="Player Type"
                android:textStyle="bold|italic" />
        </TableRow>
    </TableLayout>

    <Button
        android:id="@+id/addPlayerButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Add Player" />

</LinearLayout>